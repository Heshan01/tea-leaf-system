{
  "expo": {
    "name": "Tea Driver",
    "slug": "tea-driver",
    "owner": "heshan0001",
    "scheme": "tea-driver",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon-driver.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Tea Driver to access your location to share live lorry location.",
          "locationAlwaysPermission": "Allow Tea Driver to access your location in the background to share live lorry location.",
          "locationWhenInUsePermission": "Allow Tea Driver to access your location while you use the app."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.heshan.teadriver",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Location is used to share live lorry location.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Location is used to share live lorry location.",
        "NSLocationAlwaysUsageDescription": "Location is used to share live lorry location."
      }
    },
    "android": {
      "package": "com.heshan.teadriver",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon-driver.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "81448ec9-ac3f-44f4-9732-bd61d8e7cfd0"
      }
    },
    "newArchEnabled": true
  }
}
